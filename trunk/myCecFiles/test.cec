class Module(BaseModule):
    def __init__(self):
        BaseModule.__init__(self)
        self.tmp = self.addSampler("snd")
        self.amps = Mix([self.amp1, self.amp2, self.amp3, self.amp4], voices=4)
        freqs = self.splitter.get(True)
        self.fade = SigTo(value=1, time=.05, init=1)
        self.out = FourBand(self.tmp, freqs[0], freqs[1], freqs[2], mul=self.amps*self.fade)

    def splitter_up(self, value):
        self.fade.value = 0
        time.sleep(.06)
        self.out.freq1 = value[0]
        self.out.freq2 = value[1]
        self.out.freq3 = value[2]
        time.sleep(.06)
        self.fade.value = 1

Interface = [   csampler(name="snd"),
                csplitter(name="splitter", label="Frequency splitter", min=100, max=18000, init=[400., 1500., 4000.], 
